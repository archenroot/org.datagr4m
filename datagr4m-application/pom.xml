		<dependency>
            <groupId>com.datagr4m</groupId>
            <artifactId>datagr4m-runtime-community</artifactId>
            <version>${version.datagr4m}</version>
        </dependency>
		
		<!-- Datagr4m.org -->
		<dependency>
            <groupId>org.datagr4m</groupId>
            <artifactId>datagr4m-workspace</artifactId>
            <version>${version.datagr4m}</version>
        </dependency>
        
        <dependency>
            <groupId>org.datagr4m</groupId>
            <artifactId>datagr4m-io-neo4j</artifactId>
            <version>${version.datagr4m}</version>
        </dependency>
        
