	<groupId>org.datagr4m</groupId>
	<artifactId>datagr4m-application</artifactId>
	<name>Datagr4m Application</name>

    <parent>
        <groupId>org.datagr4m</groupId>
        <artifactId>datagr4m-master</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

